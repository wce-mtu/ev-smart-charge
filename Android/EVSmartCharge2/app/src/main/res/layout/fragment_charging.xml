<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/charge_progress"
        android:progress="50"
        android:layout_below="@+id/charging_text"
        android:layout_marginTop="100dp"
        android:layout_alignLeft="@+id/charging_text"
        android:layout_alignStart="@+id/charging_text"
        android:layout_alignEnd="@+id/charging_text"
        android:layout_alignRight="@+id/charging_text" />

    <Button
        android:text="Update Departure Time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/modtime_button"
        android:layout_above="@+id/cancel_button"
        android:layout_marginRight="10dp"
        android:layout_alignEnd="@+id/charging_text"
        android:layout_marginBottom="14dp" />

    <Button
        android:text="Cancel"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_button"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Update Charge Request"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/modcharge_button"
        android:layout_above="@+id/cancel_button"
        android:layout_marginLeft="10dp"
        android:layout_alignStart="@+id/charging_text"
        android:layout_marginBottom="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                            Charging...                            "
        android:textSize="18dp"
        android:layout_marginTop="87dp"
        android:id="@+id/charging_text"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textSize="18dp"
        android:layout_below="@+id/charging_text"
        android:layout_marginTop="30dp"
        android:id="@+id/charge_text"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your car will be charged to 90% by 2:00 PM"
        android:textSize="18dp"
        android:id="@+id/status_text"
        android:textAlignment="center"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/charge_progress"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>